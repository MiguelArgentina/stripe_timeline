<!-- app/views/sessions/new.html.erb -->
<div class="container my-5" style="max-width:420px;">
  <h1 class="h3 mb-3">Sign in</h1>

  <% if alert %><div class="alert alert-danger"><%= alert %></div><% end %>
  <% if notice %><div class="alert alert-success"><%= notice %></div><% end %>

  <%= form_with url: session_path, method: :post, local: true, data: { turbo: false } do %>
    <% if Current.tenant.nil? %>
      <div class="mb-3">
        <label class="form-label">Subdomain</label>
        <input name="subdomain" class="form-control" placeholder="yourteam">
        <div class="form-text">In dev, this will be yourteam.lvh.me</div>
      </div>
    <% end %>

    <div class="mb-3">
      <label class="form-label">Email</label>
      <input type="email" name="email" class="form-control" autocomplete="email">
    </div>

    <div class="mb-3">
      <label class="form-label">Password</label>
      <input type="password" name="password" class="form-control" autocomplete="current-password">
    </div>

    <button class="btn btn-primary w-100">Sign in</button>
  <% end %>

  <div class="mt-3">
    <%= link_to "Create an account", new_registration_path %>
  </div>
</div>
