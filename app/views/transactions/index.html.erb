<h2 class="mb-3">Recent Transactions</h2>
<%= turbo_stream_from "tx:index:#{Current.tenant.id}" %>

<div class="card shadow-sm border-0 mb-3">
  <div class="card-body">
    <form method="get">
      <div class="row g-2 align-items-end">
        <div class="col-12 col-md-3">
          <label class="form-label">Status</label>
          <select name="status" class="form-select">
            <option value="">All</option>
            <% %w[succeeded refunded disputed requires_payment_method].each do |st| %>
              <option value="<%= st %>" <%= "selected" if params[:status]==st %>><%= st %></option>
            <% end %>
          </select>
        </div>

        <div class="col-6 col-md-3">
          <label class="form-label">From</label>
          <input type="date" name="from" value="<%= params[:from] %>" class="form-control">
        </div>
        <div class="col-6 col-md-3">
          <label class="form-label">To</label>
          <input type="date" name="to" value="<%= params[:to] %>" class="form-control">
        </div>

        <div class="col-12 col-md-3 d-flex gap-2">
          <button type="submit" class="btn btn-primary flex-fill">Filter</button>
          <%= link_to "Export visible (CSV)", export_transactions_path(request.query_parameters),
                      data: { turbo: false }, class: "btn btn-outline-secondary flex-fill" %>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="d-flex flex-wrap gap-2 mb-3">
  <span class="kpi-pill text-bg-dark-subtle">Gross <strong><%= format_cents(@stats[:gross], @stats[:currency]) %></strong></span>
  <span class="kpi-pill text-bg-info-subtle">Refunds <strong><%= format_cents(@stats[:refunds], @stats[:currency]) %></strong></span>
  <span class="kpi-pill text-bg-warning-subtle">Disputed <strong><%= format_cents(@stats[:disputed], @stats[:currency]) %></strong></span>
  <span class="kpi-pill text-bg-success-subtle">Net <strong><%= format_cents(@stats[:net], @stats[:currency]) %></strong></span>
  <span class="text-body-secondary align-self-center">(<%= @stats[:count] %> shown)</span>
</div>

<div class="row g-3">
  <div class="col-lg-5 col-xl-4">
    <div class="card shadow-sm border-0 sticky-col">
      <div id="tx_index_list" class="list-group list-group-flush tx-list">
        <%= render partial: "transactions/summary_row", collection: @rows, as: :t %>
      </div>
    </div>
  </div>

  <div class="col-lg-7 col-xl-8">
    <%= turbo_frame_tag "details" do %>
      <div class="card shadow-sm border-0">
        <div class="card-body text-body-secondary">Select a transaction to view its timelineâ€¦</div>
      </div>
    <% end %>
  </div>
</div>
